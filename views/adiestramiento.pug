                        //- li #{lit.training.behaviour}
                        //- li #{lit.training.puppies}
                        //- li #{lit.training.socialization}
                        //- li #{lit.training.play}
                    .group-md.group-middle
                      a.button.button-width-xl-230.button-primary.button-pipaluk(href='mailto:info@anubis.pet') #{lit.contact}
