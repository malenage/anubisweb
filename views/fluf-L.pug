                .box-comment
                  .unit.unit-spacing-md.flex-column.flex-md-row.align-items-lg-center
                    .unit-left
                      a.box-comment-figure(href='#')
                        img(src='images/user-1-119x119.jpg' alt='' width='119' height='119')
                    .unit-body
                      .group-sm.group-justify
                        div
                          .group-sm.group-middle
                            p.box-comment-author
                              a(href='#') Jaime
